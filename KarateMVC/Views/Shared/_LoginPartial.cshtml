@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right navi">
        <li>
            <a class="glyphicon glyphicon-pencil" href="@Url.Action("Index", "Manage")"><span>Gestisci profilo</span></a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="glyphicon glyphicon-log-out"><span >Logout</span></a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right navi">
        <li>@Html.ActionLink("Registrazione", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li><a id="loginlink" class="glyphicon glyphicon-log-in" href="@Url.Action("Login", "Account")"><span>Login</span></a></li>
    </ul>
}
