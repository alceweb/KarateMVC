@model IEnumerable<KarateMVC.Models.Eventi>

@{
    ViewBag.Title = "Eventi";
}

<h2>@ViewBag.Message</h2>

<div class="div4">

    @foreach (var item in Model)
    {
        <hr class="hr1" />
        <div class="row">
            <div class="col ">
                <a href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })"><img src="@Url.Content("~/Content/Immagini/Eventi/" + item.Evento_Id + "/" + item.Evento_Id + ".jpg")" class="img-circle" alt="" /></a>

            </div>
            <div class="col ">
                <h4 >@Html.ValueFor(modelItem => item.Data, "{0:dddd dd MMM yyyy}")</h4>
                <a href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })">
                    <h2>@Html.DisplayFor(modelItem => item.Titolo)</h2>

                </a>

</div>
        </div>
    }
</div>

