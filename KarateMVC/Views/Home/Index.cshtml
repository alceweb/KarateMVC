<div class="table table-responsive div1 content" >

@foreach (var item in Model)
{
    <div class="text-center">

        <h4 class="text-center">@Html.DisplayFor(modelItem => item.Titolo)</h4>
        @if (item.Gara_Id != 19)
        {
            <h5 class="text-center">@item.Data.ToString("dddd dd MMM yyyy")</h5>

        }
        else
        {
            <h5> </h5>
        }
        <p>
            <a href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })"><img src="@Url.Content("~/Content/Immagini/Eventi/" + item.Evento_Id + "/" + item.Evento_Id + ".jpg")" alt="" /></a>
        </p>
        @if (User.IsInRole("Admin"))
        {
        <a href="@Url.Action("EditImg", "Eventis", new{id = @item.Evento_Id})" class="text-primary h4" title="Galleria fotografica"><span class="glyphicon glyphicon-camera"></span></a>
        <a href="@Url.Action("Edit", "Eventis", new{id = @item.Evento_Id})" class="text-danger h4" title="Testo"><span class="glyphicon glyphicon-pencil"></span></a>
