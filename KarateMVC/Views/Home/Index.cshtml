@model IEnumerable<KarateMVC.Models.Eventi>

@{
    ViewBag.Title = "Home Page";
}
<video controls="controls">
        <source src="~/Content/Video/mannequin%20challenge.MP4" type="video/mp4" />
</video>
@*Inizio jumbo avviso*@
@if (ViewBag.AvvisoCount >0)
{
    <div class="jumbo img-responsive">

        <img class="img-responsive" src="~/Content/Immagini/ScrittaTrasparenteP.png" />
        @foreach (var item in ViewBag.Avviso)
        {
            <hr />
            if (User.IsInRole("Admin"))
            {
                <div class="text-center">
                    <a href="@Url.Action("EditImg", "Eventis", new{id = @item.Evento_Id})" class="text-primary h3" title="Galleria"><span class="glyphicon glyphicon-camera"></span></a>
                    <a href="@Url.Action("Edit", "Eventis", new{id = @item.Evento_Id})" class="text-danger h3" title="Testo"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("EditImgP", "Eventis", new{id = @item.Evento_Id})" class="text-primary h3" title="Bacheca"><span class="glyphicon glyphicon-picture"></span></a>

                </div>
            }
            if (File.Exists(Server.MapPath("~/Content/Immagini/Eventi/" + @item.Evento_Id + "/" + @item.Evento_Id + ".jpg")))
            {
                <img src="@Url.Content("~/Content/Immagini/Eventi/" + @item.Evento_Id + "/" + @item.Evento_Id + ".jpg")" class="img-jumbo" />
            }
            <h1 class="text-center">@item.Titolo</h1>
            <h4>@Html.Raw(item.Descrizione)</h4>
        }
    </div>

}
@*Fine jumbo avviso*@

@*Inizio galleria prima pagina*@
<div class="table table-responsive div1 content" >
@foreach (var item in Model)
{
    <div class="text-center">

        <h4 class="text-center">@Html.DisplayFor(modelItem => item.Titolo)</h4>
        @if (item.Gara_Id != 19)
        {
            <h5 class="text-center">@item.Data.ToString("dddd dd MMM yyyy")</h5>

        }
        else
        {
            <h5> </h5>
        }
        <p>
            <a href="@Url.Action("Evento", "Home", new { id = item.Evento_Id })"><img src="@Url.Content("~/Content/Immagini/Eventi/" + item.Evento_Id + "/" + item.Evento_Id + ".jpg")" alt="" /></a>
        </p>
        @if (User.IsInRole("Admin"))
        {
        <a href="@Url.Action("EditImg", "Eventis", new{id = @item.Evento_Id})" class="text-primary h4" title="Galleria fotografica"><span class="glyphicon glyphicon-camera"></span></a>
        <a href="@Url.Action("Edit", "Eventis", new{id = @item.Evento_Id})" class="text-danger h4" title="Testo"><span class="glyphicon glyphicon-pencil"></span></a>
        <a href="@Url.Action("EditImgP", "Eventis", new{id = @item.Evento_Id})" class="text-primary h4" title="Bacheca"><span class="glyphicon glyphicon-picture"></span></a>
        }

    </div>
}
</div>
@*Fine galleria prima pagina*@