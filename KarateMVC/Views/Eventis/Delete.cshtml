@model KarateMVC.Models.Eventi

@{
    ViewBag.Title = "Gestione eventi";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cancella</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titolo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titolo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Model.Data.ToString("dddd dd/MMM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataP)
        </dt>

        <dd>
            @Model.DataP.ToString("dddd dd/MMM/yyyy")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataF)
        </dt>

        <dd>
            @Model.DataF.ToString("dddd dd/MMM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pubblica)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pubblica)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Approfondimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Approfondimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Galleria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Galleria)
        </dd>

    </dl>
    <div class="row">
        @if (ViewBag.FilesCount > 0)
        {
            <h4 class="text-danger">
                ATTENZIONE!!!<br />
                Ci sono @ViewBag.FilesCount files agganciati all'evento... se cancelli l'evento anche i files verranno cancellati
            </h4>
            <div class="galla">
                @foreach (var fullpath in ViewBag.Files)
                {
                    var filename = Path.GetFileName(fullpath);
                    <img src="@Url.Content("~/Content/Immagini/Eventi/" + Model.Evento_Id + "/" + @filename)" class="img-thumbnail" />
                }
            </div>

        }

    </div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancella" class="btn btn-danger" />
            @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
