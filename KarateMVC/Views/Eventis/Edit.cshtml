@model KarateMVC.Models.Eventi

@{
    ViewBag.Title = "Gestione eventi";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Modifica</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Evento_Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Titolo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titolo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titolo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Gara_Id, "Gara_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Gara_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gara_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descrizione, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.Data, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.DataP, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DataP, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
            @Html.LabelFor(model => model.DataF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*Incompatibilità jquery validation date per Chrome e FireFox*@
                @{ if (Request.Browser.Browser != "IE")
                    {
                        Html.EnableClientValidation(false);
                    }

                }
                @Html.TextBoxFor(model => model.DataF, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DataF, "", new { @class = "text-danger" })
                @{ Html.EnableClientValidation(true);}
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Pubblica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pubblica)
                    @Html.ValidationMessageFor(model => model.Pubblica, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Approfondimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Approfondimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Approfondimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Galleria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Galleria)
                    @Html.ValidationMessageFor(model => model.Galleria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('.datepicker').datepicker('option', 'dateFormat', 'dd/mm/yyyy');
    </script>

}
