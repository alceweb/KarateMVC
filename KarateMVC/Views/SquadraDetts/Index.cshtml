@model IEnumerable<KarateMVC.Models.SquadraDett>

@{
    ViewBag.Title = "Dettaglio squadre";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeSquadra.NomeSquadra)
        </th>
        <th></th>
    </tr>

